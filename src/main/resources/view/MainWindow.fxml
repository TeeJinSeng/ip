<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="apunable.ui.MainWindow">
    <children>
        <TextField fx:id="userInput"
                   layoutY="558.0"
                   onAction="#handleUserInput"
                   prefHeight="41.0"
                   prefWidth="324.0"
                   promptText="Type your command here" style="-fx-background-color: #ccffcc;"
                   AnchorPane.bottomAnchor="1.0"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="75.0">
         <font>
            <Font size="13.0" />
         </font></TextField>
        <Button fx:id="sendButton"
                layoutX="324.0"
                layoutY="558.0"
                mnemonicParsing="false"
                onAction="#handleUserInput"
                prefHeight="41.0"
                prefWidth="76.0"
                text="Send"
                AnchorPane.bottomAnchor="1.0"
                AnchorPane.rightAnchor="0.0">
         <font>
            <Font name="Comic Sans MS" size="18.0" />
         </font></Button>
        <ScrollPane fx:id="scrollPane"
                    hbarPolicy="NEVER"
                    hvalue="1.0"
                    prefHeight="557.0"
                    prefWidth="400.0"
                    vvalue="1.0"
                    fitToWidth="true"
                    AnchorPane.topAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="40.0"
                    style="-fx-background-image: url(/images/DaBackground.jpg);
                           -fx-background-repeat: no-repeat;
                           -fx-background-position: center;
                           -fx-background-size: cover;
                           -fx-background: transparent;
                           ">
            <content>
                <VBox fx:id="dialogContainer"
                      prefHeight="552.0" prefWidth="388.0"
                      maxWidth="1.7976931348623157E308"
                      style="-fx-background-color: transparent;" />
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
